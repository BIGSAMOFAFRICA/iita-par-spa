@page "/admin-user-list"

<div class="search-bar par-card">
    <label for="search">Search:</label>
    <input type="text" id="search" placeholder="Enter search term">
    <input type="checkbox" id="ldap">
    <label for="ldap">LDAP?</label>
    <button style="background-color: green!important;">Search</button>
    <button>Add New User</button>
    <button>List all users</button>
    <button>Roles</button>
</div>

<table class="user-table par-card">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mail</th>
            <th>Login</th>
            <th>Failed</th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in users)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Mail</td>
                <td>@item.Login</td>
                <td>@item.LoginFailed</td>
                <td><a href="#">Switch to</a><a href="#">Remove</a> <a href="#">Edit</a></td>
            </tr>
        }
        <!-- Repeat <tr> for each user -->
    </tbody>
</table>

<div class="pagination">
    <span>Result page:</span>
    <a href="#" class="page-link">1</a>
    <a href="#" class="page-link">2</a>
    <a href="#" class="page-link">3</a>
    <a href="#" class="page-link">4</a>
    <a href="#" class="page-link">5</a>
    <span class="dots">...</span>
    <a href="#" class="page-link">10</a>
    <a href="#" class="page-link next-prev">Next</a>
    <a href="#" class="page-link next-prev">Last</a>
</div>
